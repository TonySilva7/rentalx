{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX API Documentation",
    "description": "This is an API documentation for car rental service",
    "version": "1.0.0",
    "contact": {
      "name": "Tony Silva",
      "url": "https://tony-cv.netlify.app/",
